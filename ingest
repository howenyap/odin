#!/usr/bin/env bash
set -euo pipefail

if [ $# -ne 1 ]; then
    echo "Usage: ./ingest <url>" >&2
    exit 1
fi

base_url="${ODIN_BASE_URL:-http://127.0.0.1:3000}"
url="$1"

curl -sS \
    -X POST "${base_url}/v1/ingest/urls" \
    -H "Content-Type: application/json" \
    -d "{\"urls\":[\"${url}\"]}"
echo
